<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donasiActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/judulDonasi"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

        <TextView
            android:id="@+id/n_anda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nama_anda"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"/>
        <EditText
            android:id="@+id/isian_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="50"
            android:inputType="text"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/a_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alamat"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"/>
        <EditText
            android:id="@+id/isian_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="50"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/jumlahDonasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jumlah"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"/>
        <EditText
            android:id="@+id/isian_jumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="20"
            android:inputType="numberDecimal"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/ctt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/catatan"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"/>
        <EditText
            android:id="@+id/isian_ctt"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxHeight="35dp"
            android:paddingLeft="15dp"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:background="@drawable/edittext1"
            android:scrollbars="vertical"
            />

        <Button
            android:id="@+id/btn_pembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/Pembayaran"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:background="@color/colorAbu"
            android:padding="10dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>